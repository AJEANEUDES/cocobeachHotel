<div class="col-lg-4">
	<div class="card">
		<div class="card-body">
			<h4 class="header-title" style="text-align: center;margin: 30px 0 30px 0;font-size: 30px;">Ajout d'un nouveau client</h4>
			<form id="create-client" action="{{path('clients.create')}}" method="POST">
				<div class="row">
					<div class="col-md-6">
						<div class="mb-3">
							<label for="nom_client" class="form-label">Nom
								<span style="font-size: 18px;color: red;">*</span>
							</label>
							<input type="text" id="nom_client" name="nom_client" class="form-control form-control-lg">
						</div>
					</div>
					<div class="col-md-6">
						<div class="mb-3">
							<label for="prenom_client" class="form-label">Prenom
								<span style="font-size: 18px;color: red;">*</span>
							</label>
							<input type="text" id="prenom_client" name="prenom_client" class="form-control form-control-lg">
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-6">
						<div class="mb-3">
							<label for="telephone_client" class="form-label">Telephone
								<span style="font-size: 18px;color: red;">*</span>
							</label>
							<input type="text" id="telephone_client" name="telephone_client" class="form-control form-control-lg">
						</div>
					</div>
					<div class="col-md-6">
						<div class="mb-3">
							<label for="email_client" class="form-label">Email
								<span style="font-size: 18px;color: red;">*</span>
							</label>
							<input type="text" id="email_client" name="email_client" class="form-control form-control-lg">
						</div>
					</div>
				</div>

				<div class="mt-4">
					<button type="submit" class="btn btn-primary btn-lg">Enregistrer un client</button>
				</div>

			</form>
		</div>
		<!-- end card-body -->
	</div>
</div>
