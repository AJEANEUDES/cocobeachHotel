						<div class="room-thumbnail-slides mb-50">
							<div id="room-thumbnail--slide" class="carousel slide" data-ride="carousel">
								<div class="carousel-inner">
									<div class="carousel-item active">
										<img
										src="{{ asset("/upload_images/" ~ chambre.imagechambre) }}" title="{{ chambre.libellechambre }}" alt="{{ chambre.libellechambre }}" class="d-block w-100">
									{# <img src="{{asset('web/img/bg-img/48.jpg')}}" class="d-block w-100" alt=""> #}
									</div>
									{% if chambre.image1 %}
										<div class="carousel-item">
											<img
											src="{{ asset("/upload_images/" ~ chambre.image1) }}" title="{{ chambre.libellechambre }}" alt="{{ chambre.libellechambre }}" class="d-block w-100">
										{# <img src="{{asset('web/img/bg-img/49.jpg')}}" class="d-block w-100" alt=""> #}
										</div>
									{% endif %}
									{% if chambre.image2 %}
										<div class="carousel-item">
											<img
											src="{{ asset("/upload_images/" ~ chambre.image2) }}" title="{{ chambre.libellechambre }}" alt="{{ chambre.libellechambre }}" class="d-block w-100">
