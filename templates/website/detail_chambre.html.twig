										{# <img src="{{asset('web/img/bg-img/51.jpg')}}" class="d-block w-100" alt=""> #}
										</li>
									{% endif %}
									{% if chambre.image4 %}
										<li data-target="#room-thumbnail--slide" data-slide-to="4">
											<img
											src="{{ asset("/upload_images/" ~ chambre.image4) }}" title="{{ chambre.libellechambre }}" alt="{{ chambre.libellechambre }}" class="d-block w-100">
										{# <img src="{{asset('web/img/bg-img/52.jpg')}}" class="d-block w-100" alt=""> #}
										</li>
									{% endif %}
