										{# <img src="{{asset('web/img/bg-img/51.jpg')}}" class="d-block w-100" alt=""> #}
										</div>
									{% endif %}
									{% if chambre.image4 %}
										<div class="carousel-item">
											<img
											src="{{ asset("/upload_images/" ~ chambre.image4) }}" title="{{ chambre.libellechambre }}" alt="{{ chambre.libellechambre }}" class="d-block w-100">
										{# <img src="{{asset('web/img/bg-img/52.jpg')}}" class="d-block w-100" alt=""> #}
										</div>
									{% endif %}
								</div>

								<ol class="carousel-indicators">
									<li data-target="#room-thumbnail--slide" data-slide-to="0" class="active">
										<img
										src="{{ asset("/upload_images/" ~ chambre.imagechambre) }}" title="{{ chambre.libellechambre }}" alt="{{ chambre.libellechambre }}" class="d-block w-100">
									{# <img src="{{asset('web/img/bg-img/48.jpg')}}" class="d-block w-100" alt=""> #}
									</li>
									{% if chambre.image1 %}
